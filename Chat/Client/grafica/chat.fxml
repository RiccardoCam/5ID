<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.grafica.ChatController">
   <children>
      <SplitPane dividerPositions="0.32" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #d7d7d7">
        <items>
          <VBox prefHeight="200.0" prefWidth="Infinity">
               <children>
                  <Label fx:id="lblUser" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#logout" prefHeight="34.0" prefWidth="Infinity" style="-fx-background-color: #cccccc;" text="Username">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="12.0" left="12.0" right="0.0" top="12.0" />
                     </padding></Label>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="409.0" prefWidth="180.0" style="-fx-focus-color: transparent">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="405.0" prefWidth="Infinity">
                           <children>
                              <VBox fx:id="containerContatti" prefHeight="405" prefWidth="Infinity" style="-fx-background-color: #dfdfdf;" />
                           </children></AnchorPane>
                    </content>
                  </ScrollPane>
               </children></VBox>
            <AnchorPane fx:id="containerChat" visible="false" minHeight="0.0" minWidth="0.0" prefHeight="452.0" prefWidth="474.0" style="-fx-background-color: rgba(0,0,0,0.7);" stylesheets="@stile.css">
                <Label fx:id="lblDestinatario" prefWidth="474.0" prefHeight="45" opacity="0.9"
                       textFill="white" style="-fx-font-weight: bold;-fx-alignment: center" />
                <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" layoutY="45" prefHeight="310.0" prefWidth="474.0" style="-fx-background-color:transparent;">
                    <VBox fx:id="containerMessaggi" prefHeight="305.0" prefWidth="455.0" style="-fx-background-color: transparent;">
                        <padding>
                            <Insets bottom="15" left="5" right="5" top="15"/>
                        </padding>
                    </VBox>
                </ScrollPane>
                <TextArea fx:id="txtMessaggio" layoutX="5" layoutY="360" opacity="0.9" prefHeight="80" prefWidth="370.0"/>
                <Button fx:id="bottoneInvia" onAction="#inviaMessaggio" layoutX="380" layoutY="360"  prefHeight="80" prefWidth="85"
                        text="Invia"/>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
